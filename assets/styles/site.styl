@import url('https://fonts.googleapis.com/css?family=Roboto:400,400i,700');
@font-face
  font-family: "Belwe"
  src: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/2509128/Belwe_en.ttf")
*
  box-sizing: inherit
  font-family: inherit
html
  box-sizing: border-box
  font-size: 1vmin
  font-family: Verdana, Geneva, Arial, Helvetica, sans-serif
  body
    margin: 0
    padding: 0
    height: 100vh
    width: 100vw
    display: flex
    justify-content: center
    align-items: center
    background-color: #eee
    overflow: hidden
    background-image: radial-gradient(circle at 50% 40%, white, white 20%, #eeeeee 50%, #333333 100%)
.card
  will-change: width, height
  position: relative
  width: 75vmin
  height: 100vmin
  padding-left: 4vmin
  display: flex
  justify-content: center
  align-items: center
  transform: scale(0.75)
  flex: 0 0 auto
  &::before
    content: ''
    display: block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/2509128/card.png)
    background-size: contain
    background-position: center
    background-repeat: no-repeat
  & > *
    position: absolute
    display: block
  .image
    z-index: -1
    width: 70%
    transform: translate(0rem, -20vmin)
  .desc
    width: 46vmin
    font-size: 3.5rem
    text-align: center
    color: #222
    transform: translate(-1vmin, 25vmin)
  .mana, .attack, .health, .name, .title
    font-size: 16rem
    font-family: 'Belwe', Verdana, Roboto, sans-serif
    color: #fff
    -webkit-text-stroke-color: #333
  .name
    height: 12vmin
    width: 100%
    transform: translate(-1vmin, 4vmin)
    font-weight: bold
    letter-spacing: -0.05rem
    text-align: center
  .mana
    transform: translate(-26.5vmin, -41vmin)
    -webkit-text-stroke-width: 0.5vmin
    font-size: 17rem
  .attack
    transform: translate(-26.5vmin, 38vmin)
    -webkit-text-stroke-width: 0.5vmin
  .health
    transform: translate(26.5vmin, 38vmin)
    -webkit-text-stroke-width: 0.5vmin
  .title
    transform: translate(0, 40vmin)
    font-size: 4rem
    -webkit-text-stroke-width: 0.3vmin
  .actions
    display: none